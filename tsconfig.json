{
    "compileOnSave": false,
    "compilerOptions": {
        "baseUrl": "./",
        "allowJs": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "outDir": "./dist/",
        "sourceMap": false,
        "noImplicitAny": false,
        "removeComments": true,
        "module": "CommonJS",
        "target": "ES2019",
        "typeRoots": [
            "node_modules/@types",
            "node_modules/@*"
        ],
        "lib": [
            "ES2019",
            "dom"
        ]
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}
