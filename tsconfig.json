{
	"compileOnSave": false,
    "compilerOptions": {
		"baseUrl": "./",
		"allowJs": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
        "outDir": "./dist/",
        "sourceMap": false,
		"noImplicitAny": false,
		"removeComments": true,
		"module": "CommonJS",
		"target": "es6",
		"typeRoots": [
			"node_modules/@types",
			"node_modules/@*"
		],
		"lib":[
			"es2018",
			"dom"
		]
    },
    "include": [
        "./src/**/*"
	],
	"exclude": [
        "node_modules",
        "**/*.spec.ts"
	]
}