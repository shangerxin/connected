{
	"compileOnSave": false,
    "compilerOptions": {
		"baseUrl": "./",
		"allowJs": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
        "outDir": "./dist/",
        "sourceMap": true,
		"noImplicitAny": false,
		"removeComments": true,
        "module": "commonjs",
		"target": "es6",
		"jsx": "react",
		"typeRoots": [
			"node_modules/@types",
			"node_modules/@*"
		],
    },
    "include": [
        "./src/**/*"
	],
	"exclude": [
        "node_modules",
        "**/*.spec.ts"
	]
}