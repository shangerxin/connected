{
	"manifest_version":2,
	"name":"Connected",
	"description":"Manage your work environment and accelerate teams collaboration",
	"icons":{
		"16":"ui/assets/images/icon16.png",
		"48":"ui/assets/images/icon48.png",
		"128":"ui/assets/images/icon128.png"
	},
	"browser_action":{
		"default_icon":{
			"16":"ui/assets/images/icon16.png",
			"48":"ui/assets/images/icon48.png"
		},
		"default_title":"Connected",
		"default_popup":"ui/popup.html"
	},
	"author":"Edwin(Er-Xin) Shang",
	"background":{
		"scripts":["background.js"],
		"persistent":true
	},
	"content_scripts":[
		{
			"matches":["<all_urls>"],
			"js":["contentscript.js"],
			"run_at":"document_start",
			"all_frames":false
		},
		{
			"matches":["<all_urls>"],
			"js":["framescript.js"],
			"run_at":"document_start",
			"all_frames":true
		}
	],
	"homepage_url":"http://www.shangerxin.com/?page_id=358",
	"permissions":[
		"tabs",
		"unlimitedStorage",
		"idle",
		"storage",
		"activeTab",
		"downloads"
	],
	"version":"0.1.3",
	"web_accessible_resources":["assets/images/*.png"]
}