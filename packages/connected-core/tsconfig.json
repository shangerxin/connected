{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "allowJs": true,
        "target": "es2020",
        "rootDir": "src"
    },
    "files": ["src/**/*/*.ts"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}
