{
    "compileOnSave": false,
    "compilerOptions": {
        "baseUrl": "./",
        "allowJs": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "outDir": "./dist/",
        "sourceMap": false,
        "noImplicitAny": false,
        "removeComments": true,
        "module": "commonjs",
        "target": "es6",
        "typeRoots": [
            "node_modules/@types",
            "node_modules/@*"
        ],
        "lib": [
            "es6",
            "dom"
        ]
    },
  "files": [
    "src/background.ts",
    "src/polyfills.ts"
  ],
    "include": [
        "./src/**/*"
    ]
}
